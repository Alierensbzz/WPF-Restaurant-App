<Page x:Class="RestaurantApp.SunumKatmani.Views.UrunViews.UrunListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestaurantApp.SunumKatmani.Views.UrunViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ürün Listesi"      
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      xmlns:vm="clr-namespace:RestaurantApp.SunumKatmani.ViewModels.UrunViewModels">

    <Page.DataContext>
        <vm:UrunListViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding RefreshCommand}"
                   Style="{StaticResource MaterialDesignIconForegroundButton}"
                   ToolTip="Listeyi Yenile">
                <materialDesign:PackIcon Kind="Refresh" />
            </Button>
            <Button Command="{Binding InsertCommand}"
                   Style="{StaticResource MaterialDesignIconForegroundButton}"
                   ToolTip="Yeni Kayıt Ekle">
                <materialDesign:PackIcon Kind="Plus" />
            </Button>
            <Button Command="{Binding UpdateCommand}"
                   Style="{StaticResource MaterialDesignIconForegroundButton}"
                   ToolTip="Seçili Kaydı Güncelle">
                <materialDesign:PackIcon Kind="Pen" />
            </Button>
            <Button Command="{Binding DeleteCommand}"
                   Style="{StaticResource MaterialDesignIconForegroundButton}"
                   ToolTip="Seçili Kaydı Sil">
                <materialDesign:PackIcon Kind="Trash" />
            </Button>
        </StackPanel>

        <DataGrid Grid.Row="1"
                 ItemsSource="{Binding Items}"
                 SelectedItem="{Binding SelectedItem}"
                 SelectionUnit="FullRow"
                 CanUserAddRows="False"
                 CanUserDeleteRows="False"
                 IsReadOnly="True"
                 AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Ad" Binding="{Binding Ad}"/>
                <DataGridTextColumn Header="Kategori" Binding="{Binding Kategori.Ad}"/>
                <DataGridTextColumn Header="Fiyat" Binding="{Binding Fiyat, StringFormat={}{0:C2}}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
